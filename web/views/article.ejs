    <div class="postTime">
        #发布时间 {{data.ctime}}
    </div>
    <div class="postCont">
        {{@ data.cont }}
    </div>
</script>
<script>
    // 获取id
    function GetRequest() {
        var url = location.search; //获取url中"?"符后的字串 
        var theRequest = new Object();
        if (url.indexOf("?") != -1) {
            var str = url.substr(1);
            strs = str.split("&");
            for (var i = 0; i < strs.length; i++) {
                theRequest[strs[i].split("=")[0]] = unescape(strs[i].split("=")[1]);
            }
        }
        return theRequest;
    }

    function getArticle() {
        let id = GetRequest().id;
        if (!id) {
            $.Toast("文章获取失败", "即将跳转到首页", "error", {
                stack: true,
                has_icon: true,
                has_close_btn: true,
                fullscreen: false,
                timeout: 3000,
                sticky: false,
                has_progress: true,
                rtl: false,
            });
            setTimeout(function() {
                window.location = "/zy"
            }, 3000)

        }
        $.ajax({
            type: "get",
            url: "/blog/" + id,
            success: function(data) {
                let sHtml = template("wztem", data)
                $("#post").html(sHtml)
                $.Toast("成功", "文章获取成功", "success", {
                    stack: true,
                    has_icon: true,
                    has_close_btn: true,
                    fullscreen: false,
                    timeout: 3000,
                    sticky: false,
                    has_progress: true,
                    rtl: false,
                });
            }
        })
    }
    getArticle()
</script>

</html>